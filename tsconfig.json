{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "module": "esnext",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "lib",
    "jsxImportSource": "theme-ui",
    "lib": ["dom", "dom.iterable", "es6", "es2017", "esnext.asynciterable"],
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["@emotion/core"]
  },
  // "exclude": ["node_modules"],
  // "include": ["@types/**/*.*", "src/**/*.*"],
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "lib"]
}
